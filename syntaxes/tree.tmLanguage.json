{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "tree",
  "scopeName": "source.tree",
  "fileTypes": [
    "tree"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#keywords"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "begin": "[0-9a-zA-Z]+",
          "end": "\n",
          "name": "keyword.file.tree"
        },
        {
          "match": "[0-9a-zA-Z]+/",
          "name": "variable.folder.tree"
        }
      ]
    },
    "variables": {
      "patterns": [
        { 
          "begin": "(.*)├──",
          "end": " ",
          "name": "variable.trunk.tree"
        },
        {
          "begin": "(.*)│",
          "end": " ",
          "name": "variable.branch.tree"
        },
        {
          "begin": "(.*)└──",
          "end": " ",
          "name": "variable.endseg.tree"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.documentation.tree",
          "begin": "#",
          "end": "$"
        },
        {
          "name": "comment.line.documentation.tree",
          "begin": "//",
          "end": "$"
        }
      ]
    }
  }
}