{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "tree",
  "scopeName": "source.tree",
  "fileTypes": ["tree"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#numbers"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "begin": "(.*)├──",
          "end": " ",
          "name": "keyword.trunk.tree"
        },
        {
          "begin": "(.*)│",
          "end": " ",
          "name": "keyword.branch.tree"
        },
        {
          "begin": "(.*)└──",
          "end": " ",
          "name": "keyword.endseg.tree"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "match": "[0-9a-zA-Z]+/",
          "name": "variable.folder.tree"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "begin": "[0-9a-zA-Z]+",
          "end": "\n",
          "name": "constant.numeric.float.tree"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.documentation.tree",
          "begin": "#",
          "end": "$"
        }
      ]
    }
  }
}
